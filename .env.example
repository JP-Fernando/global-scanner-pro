# ========================================
# Global Quant Scanner Pro - Configuration
# ========================================

# ----------------------------------------
# Server Configuration
# ----------------------------------------
PORT=3000
NODE_ENV=development
# Options: development, staging, production

# ----------------------------------------
# Security
# ----------------------------------------
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here-change-this-in-production

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds

RATE_LIMIT_MAX_REQUESTS=100
# Maximum requests per window per IP

RATE_LIMIT_YAHOO_MAX=20
# Maximum Yahoo Finance API requests per minute

# ----------------------------------------
# External Services
# ----------------------------------------
# SMTP Configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833

# Webhook URLs for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# ----------------------------------------
# Monitoring and Error Tracking
# ----------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
# Options: development, staging, production

SENTRY_TRACES_SAMPLE_RATE=0.1
# Percentage of transactions to trace (0.0 - 1.0)

# ----------------------------------------
# Feature Flags
# ----------------------------------------
ENABLE_ML_FEATURES=true
ENABLE_ALERTS=true
ENABLE_PORTFOLIO_OPTIMIZER=true
ENABLE_STRESS_TESTING=true
ENABLE_ATTRIBUTION_ANALYSIS=true

# ----------------------------------------
# Database (Future use)
# ----------------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/scanner_db
# REDIS_URL=redis://localhost:6379

# ----------------------------------------
# API Keys (Future integrations)
# ----------------------------------------
# ALPHA_VANTAGE_API_KEY=your-api-key
# FINNHUB_API_KEY=your-api-key
# POLYGON_API_KEY=your-api-key

# ----------------------------------------
# Logging
# ----------------------------------------
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly

LOG_FILE_PATH=./logs
# Path to store log files

LOG_MAX_FILES=7
# Number of days to keep log files

# ----------------------------------------
# Performance
# ----------------------------------------
# Cache TTL in seconds
CACHE_TTL=300
# 5 minutes

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000
# 30 seconds

# ----------------------------------------
# Development
# ----------------------------------------
# Enable debug mode
DEBUG=false

# Enable API documentation (Swagger)
ENABLE_API_DOCS=true
